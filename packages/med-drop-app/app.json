{
    "expo": {
        "name": "MED DROP",
        "slug": "med-drop",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "scheme": "meddrop",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#2563EB"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": false,
            "bundleIdentifier": "com.meddrop.app",
            "infoPlist": {
                "NSCameraUsageDescription": "We need camera access to take photos of medicines and prescriptions",
                "NSMicrophoneUsageDescription": "We need microphone access for voice commands",
                "NSLocationWhenInUseUsageDescription": "We need location for emergency features"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#2563EB"
            },
            "package": "com.meddrop.app",
            "permissions": [
                "CAMERA",
                "RECORD_AUDIO",
                "ACCESS_FINE_LOCATION",
                "VIBRATE",
                "RECEIVE_BOOT_COMPLETED",
                "SCHEDULE_EXACT_ALARM",
                "android.permission.USE_BIOMETRIC",
                "android.permission.USE_FINGERPRINT"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            [
                "expo-notifications",
                {
                    "icon": "./assets/icon.png",
                    "color": "#2563EB"
                }
            ],
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Allow MED DROP to use Face ID for secure access"
                }
            ]
        ],
        "extra": {
            "eas": {
                "projectId": "90914421-0611-4b66-83ff-1d3cdc32fc50"
            }
        }
    }
}